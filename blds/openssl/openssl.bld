#package name
NAME=openssl

#Description
DESC="The Open Source toolkit for Secure Sockets Layer and Transport Layer Security"

#package version
VERSION=1.1.0c
DVERSION=1.1.0c

#directory locations, 99.99% of the time this is 1
ISUSR=1

#source location (used by wget)
SRC=http://www.openssl.org/source/openssl-${DVERSION}.tar.gz

#extra parameters to pass to configure (if not ISSPECIAL)
EXTRACONF=

#1 if BuildAndInstall should be called instead of ./configure && make && make install method
BUILD=custom

# build/package dependancies
DEPS=('glibc' 'zlib')

# 'no' to skip calls to strip
STRIP=

#array of deps to add to package (ones that are not automatically picked up by pkgr)
PKGDEPS=

#1 to restore libdb to what it was before pkgr -genmeta is called ( ie. ignore libs )
RESTORELIBDB=

function BuildAndInstall
{
	if [ "${ARCH}" == "x86_64" ]; then
		openssltarget='linux-x86_64'
		optflags='enable-ec_nistp_64_gcc_128'
	elif [ "${ARCH}" == "armv6l" ] || [ "${ARCH}" == "armv7l" ]; then
		openssltarget='linux-armv4'
		optflags=''
	elif [ "${ARCH}" == "aarch64" ]; then
		openssltarget='linux-aarch64'
		optflags=''
	fi

	./Configure --prefix=/usr --openssldir=/etc/ssl --libdir=lib --openssldir=/etc/ssl \
			shared threads enable-idea enable-mdc2 enable-rc5 disable-deprecated enable-camellia enable-zlib enable-md2 ${optflags} \
			--api=1.1.0 \
			enable-ec_nistp_64_gcc_128 enable-sctp enable-ec enable-asm enable-rfc3779 enable-heartbeats \
			disable-deprecated \
			-Wa,--noexecstack "${CFLAGS}" "${LDFLAGS}" \
			enable-ssl2 \
			enable-ssl3 \
			enable-ssl3-method \
			"${openssltarget}"

	make depend
	make -j${BLDR_CORES}
	make DESTDIR=/root/bldr-inst MANDIR=/usr/share/man install

}

function Detect
{
	LATEST=`curl -L -s https://www.openssl.org/source/ | egrep "openssl-1\.1\.0.\.tar\.gz" | sed -e 's/.*openssl-\(1\.1\.0.\)\.tar\.gz.*/\1/g'`

	vercomp $DVERSION $LATEST
	if [ $? -eq 2 ];
	then
			echo "$NAME: New Version Available! - $LATEST"
	fi
}
