function postinst() {
    cd /usr/lib/virtualbox
    for i in VirtualBox VBoxHeadless VBoxSDL VBoxNetDHCP VBoxNetAdpCtl; do
      chown root.root $i
      chmod 4511 $i
    done
    depmod
}
function postup() {
    cd /usr/lib/virtualbox
    for i in VirtualBox VBoxHeadless VBoxSDL VBoxNetDHCP VBoxNetAdpCtl; do
      chown root.root $i
      chmod 4511 $i
    done
    depmod
}
