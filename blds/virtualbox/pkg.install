function postinst() {
        systemd-sysusers virtualbox.conf
        pushd /usr/lib/virtualbox &> /dev/null
        for i in VBoxSDL VirtualBox VBoxHeadless VBoxNetDHCP VBoxNetAdpCtl VBoxNetNAT;
        do
                chmod 4755 $i;
        done
        chmod +x /usr/share/virtualbox/*.sh
        systemctl restart systemd-modules-load
}
function postup() {
        postinst
}
