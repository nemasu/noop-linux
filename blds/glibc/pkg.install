function genLocales() {
	echo "Generating Locales..."
	for i in `ls /usr/share/i18n/locales | sed -e '/translit/d;/@/d;/iso/d;/i18n/d;/LC/d;/POSIX/d;'`;
	do
		echo "${i}.UTF-8"; localedef -i "${i}" -f UTF-8 "${i}.UTF-8";
	done
	echo "done."
}

function postinst() {
    mkdir -p /lib/locale
	genLocales
}

function postup() {
	postinst
}
