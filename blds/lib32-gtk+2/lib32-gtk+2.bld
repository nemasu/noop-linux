#package name
NAME=lib32-gtk+2

#Description
DESC="GObject-based multi-platform GUI toolkit (version 2)"

#package version
VERSION=2.24.31
DVERSION=2.24.31

#directory locations, 99.99% of the time this is 1
ISUSR=1

#source location (used by wget)
MM=`echo $DVERSION | sed -e 's/\([0-9]*\.[0-9]*\)\..*/\1/g'`
SRC=http://ftp.gnome.org/pub/gnome/sources/gtk+/$MM/gtk+-$DVERSION.tar.xz

#extra parameters to pass to configure (if not ISSPECIAL)
EXTRACONF=

#1 if BuildAndInstall should be called instead of ./configure && make && make install method
BUILD=custom

if [ "${ARCH}" == "x86_64" ];
then
        EXTRADEPS="cups"
fi

# build/package dependancies
DEPS=('lib32-atk' 'lib32-bzip2' 'lib32-cairo' 'lib32-cups' 'lib32-expat' 'lib32-fontconfig' 'lib32-freetype2' 'lib32-gdk-pixbuf' 'lib32-glib2' 'lib32-glibc' 'lib32-harfbuzz' 'lib32-libX11' 'lib32-libXau' 'lib32-libXcomposite' 'lib32-libXcursor' 'lib32-libXdamage' 'lib32-libXdmcp' 'lib32-libXext' 'lib32-libXfixes' 'lib32-libXi' 'lib32-libXinerama' 'lib32-libXrandr' 'lib32-libXrender' 'lib32-libXxf86vm' 'lib32-libdrm' 'lib32-libffi' 'lib32-libpng' 'lib32-libpng15' 'lib32-libxcb' 'lib32-mesalib' 'lib32-pango' 'lib32-pcre' 'lib32-pixman' 'lib32-util-linux' 'lib32-zlib')

# 'no' to skip calls to strip
STRIP=

#array of deps to add to package (ones that are not automatically picked up by pkgr)
PKGDEPS=

#1 to restore libdb to what it was before pkgr -genmeta is called ( ie. ignore libs )
RESTORELIBDB=

function BuildAndInstall
{
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"


        CXX=/bin/false ./configure --prefix=/usr \
                --libdir=/usr/lib32 \
                --libexecdir=/usr/lib32 \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --with-xinput=yes

    # https://bugzilla.gnome.org/show_bug.cgi?id=655517
    sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

    make -j${BLDR_CORES}

        make DESTDIR=/root/bldr-inst install

        sed -i "s#env python#env python2#" /root/bldr-inst/usr/bin/gtk-builder-convert

        cd /root/bldr-inst
        rm -rf etc
    rm -rf usr/{include,share}

        cd usr/bin
        mv gtk-query-immodules-2.0 gtk-query-immodules-2.0-32
        rm -f gtk-builder-convert gtk-demo gtk-update-icon-cache
}

#Default HTTP curl new version detection
function Detect
{
        MM=`curl -s http://ftp.gnome.org/pub/gnome/sources/gtk+/ | grep -E "2\.[0-8][0-8]*\/<" | tail -n1 | sed -e "s/.*\(2\.[0-8][0-8]*\)\/<.*/\1/g"`
        LATEST=`curl -s http://ftp.gnome.org/pub/gnome/sources/gtk+/$MM/ | grep "LATEST-IS-" | sed -e 's/.*LATEST-IS-\([0-9\.]*\).*/\1/g'`

        vercomp $VERSION $LATEST
        if [ $? -eq 2 ];
        then
                        echo "$NAME: New Version Available! - $LATEST"
        fi
}
