#package name
NAME=xorg-fonts-cyrillic

#Description
DESC="X.org cyrillic fonts"

#package version
VERSION=1.0.3-1
DVERSION=1.0.3

#directory locations, 99.99% of the time this is 1
ISUSR=1

#source location (used by wget)
SRC=http://x.org/releases/individual/font/font-cronyx-cyrillic-${DVERSION}.tar.bz2

#extra parameters to pass to configure (if not ISSPECIAL)
EXTRACONF="--prefix=/usr --with-fontdir=/usr/share/fonts/cyrillic"

#1 if BuildAndInstall should be called instead of ./configure && make && make install method
BUILD=custom

# build/package dependancies
DEPS=

# 'no' to skip calls to strip
STRIP=

#array of deps to add to package (ones that are not automatically picked up by pkgr)
PKGDEPS=

#1 to restore libdb to what it was before pkgr -genmeta is called ( ie. ignore libs )
RESTORELIBDB=

function BuildAndInstall
{
        ./configure $EXTRACONF
        make
        make DESTDIR=/root/bldr-inst install

        GetSource http://x.org/releases/individual/font/font-misc-cyrillic-${DVERSION}.tar.bz2
        ./configure $EXTRACONF
        make
        make DESTDIR=/root/bldr-inst install

        GetSource http://x.org/releases/individual/font/font-screen-cyrillic-1.0.4.tar.bz2
        ./configure $EXTRACONF
        make
        make DESTDIR=/root/bldr-inst install

        GetSource http://x.org/releases/individual/font/font-winitzki-cyrillic-${DVERSION}.tar.bz2
        ./configure $EXTRACONF
        make
        make DESTDIR=/root/bldr-inst install

        rm -f /root/bldr-inst/usr/share/fonts/*/fonts.*

}

#Default HTTP curl new version detection
function Detect
{
        NAME=font-cronyx-cyrillic
        LISTURL=http://x.org/releases/individual/font/
        FILELIST=`GetFileList`
        LATEST=0
        NAME=xorg-fonts-cyrillic

        for i in ${FILELIST[@]};
        do
                        CURVER=`echo $i | sed -e 's/'"${NAME}"'-//g; s/.tar.*//g'`
                        vercomp $LATEST $CURVER
                        if [ $? -eq 2 ];
                        then
                                        LATEST=$CURVER
                        fi
        done

        vercomp $VERSION $LATEST
        if [ $? -eq 2 ];
        then
                        echo "$NAME: New Version Available! - $LATEST"
        fi
}
